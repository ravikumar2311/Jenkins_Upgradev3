pipeline {
    agent {
        docker {
            image 'maven:latest'
            args '-u 0'
            workingDir "${WORKSPACE}"
        }
    }
    
    environment {
      VERSION = '0.1.0'
      RELEASE_VERSION = 'R.2'
    }

    stages {
      stage('Audit tools') {
        steps {
          bat '''
              java -version
              mvn -version
          '''
          bat 'printenv'
          bat 'dir /a %WORKSPACE%'
        }
      }

      stage('Unit Test') {
        steps {
          dir('./java-tomcat-sample') {
            bat '''
              echo "Executing Unit Tests..."
              mvn test
          '''
          }
        }
      }

      stage('Build') {
        steps {
          echo "Building version: ${VERSION} with suffix: ${RELEASE_VERSION}"
          echo 'Mention your Application Build Code here!!!'
          bat 'mvn -f java-tomcat-sample/pom.xml clean package'
        }
      }
    }
}



/*
Requirements -- 

1. Jenkins Docker PlugIns
    - Docker
    - Docker Pipeline

2. Install Docker Engine on Execution machine
   Link -- https://docs.docker.com/engine/install/

3. Add Jenkins User to Group
   sudo usermod -a -G docker jenkins

4. Reboot your Machine
   reboot

5. Execute Docker using root User-
   args '-u root'
*/
